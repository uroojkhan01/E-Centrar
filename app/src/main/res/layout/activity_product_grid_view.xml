<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c8e7f0"
    tools:context=".ProductGridViewActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Products List"
            android:layout_gravity="left"
            android:textSize="20dp"
            android:textColor="#f4f9f4"
            android:textStyle="bold|italic"
            android:id="@+id/toolbar_title" />

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/booking"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:layout_marginEnd="16dp"
        android:paddingLeft="10dp"
        android:paddingTop="6dp"
        android:text="Booking Order for :"
        android:textColor="#272878"
        android:textSize="18dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toStartOf="@+id/customername"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/customername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="customer"
        android:textColor="#272878"
        android:textSize="18dp"
        android:paddingLeft="5dp"
        android:paddingTop="6dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toStartOf="@+id/booking"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <Button
        android:id="@+id/button19"
        android:layout_width="132dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttoncustom"
        android:text="StartBooking"
        android:textColor="#272878"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/booking" />


    <GridView
        android:numColumns="2"
        android:id="@+id/grid"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="2dp"
        android:verticalSpacing="2dp"
        android:paddingBottom="130dp"
        app:layout_constraintTop_toBottomOf="@+id/button19"
        />

</android.support.constraint.ConstraintLayout>
